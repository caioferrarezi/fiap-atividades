extends ../layouts/base

block content
  main(class="container mx-auto mt-12")
    div(class="flex justify-between items-center mb-8")
      h1(class="text-3xl font-bold text-slate-700") Usuários
      a(href="/users/new", class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-auto px-5 py-2.5 text-center") Novo Usuário

    ul(class="grid grid-cols-[repeat(auto-fill,_minmax(300px,_1fr))] w-full gap-4")
      each user in users
        li
          a(
            href="/users/" + user.id
            class="flex items-center bg-white p-4 gap-4 rounded-xl border border-slate-200 cursor-pointer hover:bg-slate-100"
          )
            div(class="flex items-center justify-center w-16 aspect-square bg-slate-300 rounded-full text-3xl font-semibold text-slate-400")= user.letters
            div(class="flex flex-col gap-1")
              p(class="text-xl font-bold text-slate-700")= user.name
              p(class="text-sm text-slate-500")= user.email
