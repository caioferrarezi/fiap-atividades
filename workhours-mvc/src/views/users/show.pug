extends ../layouts/base

block content
  main(class="container mx-auto mt-12")
    div(class="flex justify-between items-center mb-8")
      div(class="flex flex-col gap-2")
        h1(class="text-3xl font-bold text-slate-700")= user.name
        p(class="text-sm text-slate-500")= user.email

      div(class="flex items-center gap-4")
        a(
          href="/workhours/new?user_id=" + user.id,
          class="text-blue-700 hover:text-blue-800 border border-blue-700 hover:border-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-auto px-5 py-2.5 text-center"
        ) Novo Apontamento

        a(
          href="/users/" + user.id + "/edit" ,
          class="text-white border bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-auto px-5 py-2.5 text-center"
        ) Editar Usuário

    div(class="border border-slate-300 rounded-xl overflow-x-auto")
      table(class="table-fixed w-full")
        thead
          tr(class="text-left bg-gray-100 *:p-4")
            th(class="w-[50%]") Lançado em
            th Horário inicial
            th Horário final
            th Ações
        tbody
          each workHour in workHours
            tr(class="*:p-4 *:even:bg-gray-50 border-t border-slate-300")
              td= new Date(workHour.workDay).toLocaleDateString('pt-BR', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })
              td= workHour.startTime
              td= workHour.endTime
              td(class="flex items-center gap-4")
                a(
                  href="/workhours/" + workHour.id,
                  class="text-blue-700 font-medium focus:ring-4 focus:outline-none focus:ring-blue-300"
                  aria-label="editar apontamento"
                ) Editar

                form(
                  action="/workhours/" + workHour.id + "?redirect=/users/" + user.id + "&_method=delete",
                  method="POST",
                  class="m-0"
                )
                  button(
                    type="submit",
                    class="text-red-700 font-medium focus:ring-4 focus:outline-none focus:ring-red-300"
                    aria-label="excluir apontamento"
                  ) Excluir

