extends ../layouts/base

block content
  main(class="container mx-auto mt-12")
    div(class="flex justify-between items-center mb-8")
      h1(class="text-3xl font-bold text-slate-700")= user.name
      a(
        href="/users/" + user.id + "/edit" ,
        class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-auto px-5 py-2.5 text-center"
      ) Editar Usuário

    table(class="table-auto w-full")
      thead
        tr(class="text-left border-b border-gray-200 *:py-2")
          th Lançado em
          th Horário inicial
          th Horário final
      tbody
        each workHour in workHours
          tr(class="*:py-2 *:even:bg-gray-100")
            td= workHour.work_day
            td= workHour.start_time
            td= workHour.end_time
